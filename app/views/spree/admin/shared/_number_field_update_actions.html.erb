<% if can?(:update, resource) %>
  <%= link_to_with_icon 'edit', t('spree.actions.edit'), '#', no_text: true, data: { action: 'edit', id: resource.id } %>
  <%= link_to_with_icon 'check', t('spree.actions.update'), '#', no_text: true, data: update_data.merge(action: 'save', id: resource.id) %>
  <%= link_to_with_icon 'cancel', t('spree.actions.cancel'), '#', no_text: true, data: { action: 'cancel', id: resource.id } %>
<% end %>
